const exec = require('cordova/exec');

/**
 * The service name to call on the native side. This corresponds to a native class.
 *
 * @see https://cordova.apache.org/docs/en/latest/guide/hybrid/plugins/index.html#the-javascript-interface
 *
 * @param {String}
 */
const serviceName = '<%= answers.apiName %>';

/**
 * Constructor.
 */
const <%= answers.apiName %> = function () { };

/**
 * Public accessible APIs to the front-end
 */
<%= answers.apiName %>.prototype.sample = function () {
    return new Promise((resolve, reject) => {
        const _successCb = function (result) {
            resolve('Result: ' + result);
        };

        const _errorCb = function (err) {
            reject(new Error('Error: ' + err));
        };

        exec(_successCb, _errorCb, serviceName, 'sample', []);
    });
};

module.exports = new <%= answers.apiName %>();
